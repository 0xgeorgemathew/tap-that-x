{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "commands": ["cd packages/nextjs && npm install --legacy-peer-deps"]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": ["cd packages/nextjs && npm run build"]
    }
  },
  "deploy": {
    "startCommand": "cd packages/nextjs && npm run serve"
  }
}
